<div class="container mt-5">
  <% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <h1>Appointment Details</h1>

  <%= render @appointment %>

  <div class="d-flex align-items-center gap-2">
    <%= link_to 'Edit this appointment', edit_appointment_path(@appointment), class: 'btn btn-primary' %>
    <%= link_to 'Back to appointments', appointments_path, class: 'btn btn-secondary' %>
    <%= button_to 'Destroy this appointment', appointment_path(@appointment), method: :delete, class: 'btn btn-danger' %>
    <%= link_to "Back to Dashboard", dashboard_path, class: "btn btn-dark" %>
  </div>
</div>
