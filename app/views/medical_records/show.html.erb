<div class="container mt-5">
  <% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <h1>Medical record Details</h1>

  <%= render @medical_record %>

  <div class="d-flex align-items-center gap-2">
    <%= link_to 'Edit this medical record', edit_medical_record_path(@medical_record), class: 'btn btn-primary' %>
    <%= link_to 'Back to medical records', medical_records_path, class: 'btn btn-secondary' %>
    <%= button_to 'Destroy this medical record', medical_record_path(@medical_record), method: :delete, class: 'btn btn-danger' %>
    <%= link_to 'Back to Main Page', root_path, class: 'btn btn-dark' %>
  </div>
</div>
