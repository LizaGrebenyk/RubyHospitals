<%= form_with(model: medical_record) do |form| %>
  <% if medical_record.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(medical_record.errors.count, "error") %> prohibited this medical record from being saved:</h2>

      <ul>
        <% medical_record.errors.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :doctor_id, class: 'form-label' %>
    <%= form.collection_select :doctor_id, Doctor.all, :id, ->(doctor) { "#{doctor.name}, #{doctor.specialization}, #{doctor.email}, #{doctor.phone_number}" }, { prompt: 'Select a doctor' }, { class: 'form-select' } %>
  </div>

  <div class="mb-3">
    <%= form.label :patient_id, class: 'form-label' %>
    <%= form.collection_select :patient_id, Patient.all, :id, ->(patient) { "#{patient.name}, #{patient.gender}, #{patient.date_of_birth}" }, { prompt: 'Select a patient' }, { class: 'form-select' } %>
  </div>

  <div class="mb-3">
    <%= form.label :date, class: 'form-label' %>
    <%= form.date_field :date, class: 'form-control'%>
  </div>

  <div class="mb-3">
    <%= form.label :diagnosis, class: 'form-label' %>
    <%= form.text_field :diagnosis, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :treatment, class: 'form-label' %>
    <%= form.text_area :treatment, class: 'form-control' %>
  </div>

  <div>
    <%= form.submit class: 'btn btn-primary'%>
  </div>
<% end %>
