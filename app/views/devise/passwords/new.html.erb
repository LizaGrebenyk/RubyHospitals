<style>
    .centered-form {
        display: flex;
        justify-content: center;
    }

    .form-fields {
        max-width: 300px;
        width: 100%;
    }

    .centered-links br {
        display: block;
        content: "";
        margin-top: 10px; /* Adjust spacing between links */
    }
</style>

<div class="container mt-5">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="#"><span class="navbar-text fw-bold fs-2 text-dark">Hospital Management System</span></a>
    </div>
  </nav>
  <div class="centered-form mt-3">
    <div class="form-fields">
      <h2 class="fs-4 text-center">Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "mt-3" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, class: "fs-5" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control custom-form-control mt-2" %>
        </div>

        <div class="actions mt-4 text-center">
          <%= f.submit "Send me reset password instructions", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="centered-form mt-3">
    <div class="centered-links"> <!-- Apply the centered-links class here -->
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
