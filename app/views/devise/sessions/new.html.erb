<style>
    .centered-form {
        display: flex;
        justify-content: center;
    }

    .form-fields {
        max-width: 300px;
        width: 100%;
    }
</style>

<div class="container mt-5">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="#"><span class="navbar-text fw-bold fs-2 text-dark">Hospital Management System</span></a>
    </div>
  </nav>
  <div class="centered-form mt-3">
    <div class="form-fields">
      <h2 class="fs-4 text-center">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-3" }) do |f| %>
        <div class="field">
          <%= f.label :email, class: "fs-5" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control custom-form-control mt-2" %>
        </div>

        <div class="field mt-3">
          <%= f.label :password, class: "fs-5" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control custom-form-control mt-2" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mt-3">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label fs-6 ms-2" %>
          </div>
        <% end %>

        <div class="actions mt-4 text-center">
          <%= f.submit "Log in", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div style="text-align: center; margin-top: 10px;">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
