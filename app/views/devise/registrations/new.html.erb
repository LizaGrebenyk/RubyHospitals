<style>
    .centered-form {
        display: flex;
        justify-content: center;
    }

    .form-fields {
        max-width: 300px;
        width: 100%;
    }
</style>

<div class="container mt-5">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="#"><span class="navbar-text fw-bold fs-2 text-dark">Hospital Management System</span></a>
    </div>
  </nav>
  <div class="centered-form mt-3">
    <div class="form-fields">
      <h2 class="fs-4 text-center">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-3" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, class: "fs-5" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control custom-form-control mt-2" %>
        </div>

        <div class="field">
          <%= f.label :password, class: "fs-5" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control custom-form-control mt-2" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: "fs-5" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control custom-form-control mt-2" %>
        </div>

        <div class="actions mt-4 text-center">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <div style="text-align: center; margin-top: 10px;">
    <%= render "devise/shared/links" %>
  </div>
</div>
