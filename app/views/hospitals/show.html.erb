<div class="container mt-5">
  <% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <h1>Hospital Details</h1>

  <%= render @hospital %>

  <div class="d-flex align-items-center gap-2">
    <%= link_to 'Edit this hospital', edit_hospital_path(@hospital), class: 'btn btn-primary' %>
    <%= link_to 'Back to hospitals', hospitals_path, class: 'btn btn-secondary' %>
    <%= button_to 'Destroy this hospital', hospital_path(@hospital), method: :delete, class: 'btn btn-danger' %>
    <%= link_to "Back to Dashboard", dashboard_path, class: "btn btn-dark" %>
  </div>
</div>
